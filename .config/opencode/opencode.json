{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "catppuccin",
  "permission": {
    "bash": {
      "dotnet build": "allow",
      "dotnet test": "allow"
    }
  },
  "formatter": {
    "csharpier": {
      "command": [
        "csharpier"
      ],
      "extensions": [
        ".cs",
        ".csproj"
      ]
    }
  },
  "mcp": {
    "mcphub": {
      "type": "remote",
      "url": "http://localhost:37373/mcp"
    }
  },
  "tools": {
    "mcphub_ado*": false,
    "mcphub_ado__repo_get_pull_request_by_id": true,
    "mcphub_ado__repo_list_pull_request_thread_comments": true,
    "mcphub_ado__repo_list_pull_request_threads": true,
    "mcphub_ado__repo_reply_to_comment": true,
    "mcphub_ado__repo_resolve_comment": true,
    "mcphub_ado__repo_update_pull_request_reviewers": true,
    "mcphub_ado__repo_update_pull_request_status": true,
    "mcphub_ado__search_code": true,
    "mcphub_ado__search_wiki": true,
    "mcphub_ado__search_workitem": true,
    "mcphub_ado__wiki_get_page_content": true,
    "mcphub_ado__wiki_get_wiki": true,
    "mcphub_ado__wiki_list_pages": true,
    "mcphub_ado__wiki_list_wikis": true,
    "mcphub_ado__wit_add_child_work_items": true,
    "mcphub_ado__wit_add_work_item_comment": true,
    "mcphub_ado__wit_get_work_item": true,
    "mcphub_ado__wit_list_work_item_comments": true,
    "mcphub_ado__wit_my_work_items": true,
    "mcphub_ado__wit_update_work_item": true,
    "mcphub_ado__wit_work_items_link": true
  }
}
