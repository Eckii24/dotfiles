{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "catppuccin",
  "permission": {
    "bash": {
      "dotnet build": "allow",
      "dotnet test": "allow"
    }
  },
  "formatter": {
    "csharpier": {
      "command": [
        "csharpier"
      ],
      "extensions": [
        ".cs",
        ".csproj"
      ]
    }
  },
  "mcp": {
    "mcphub": {
      "type": "remote",
      "url": "http://localhost:37373/mcp"
    }
  }
}
