news.version=3.4.2

verbose=affected,blank,context,edit,header,footnote,label,new-id,news,project,special,sync,recur
recurrence=0
search.case.sensitive=0

# CALENDAR
weekstart=Monday

# URGENCY
urgency.age.coefficient=-3
urgency.age.max=90
urgency.tags.coefficient=0
urgency.project.coefficient=0
urgency.annotations.coefficient=0
urgency.user.tag.later.coefficient=-6.0

# UDAs
uda.priority.default=M

# REPORTS
report.next.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description.count,urgency 

report.pro.filter=status:pending -WAITING limit:page
report.pro.labels=ID,Active,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg
report.pro.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description.count,urgency 
report.pro.sort=project+,urgency-

report.inbox.filter=status:pending project:
report.inbox.labels=ID,Active,Created,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg
report.inbox.columns=id,start.age,entry,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description.count,urgency 
report.inbox.sort=entry-

